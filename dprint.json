{
    "lineWidth": 120,
    "indentWidth": 4,
    "typescript": {
        "quoteStyle": "alwaysSingle",
        "jsx.quoteStyle": "preferDouble",
        "trailingCommas": "never",
        "module.sortImportDeclarations": "maintain",
        "module.sortExportDeclarations": "maintain",
        "jsx.bracketLine": "maintain"
    },
    "includes": [
        "**/*.{ts,tsx,js,jsx,cjs,mjs,json,md}"
    ],
    "excludes": [
        // Package managers
        "**/node_modules",
        "**/*-lock.json",
        ".yarn",
        "/.pnp*",
        // TypeScript
        "tsconfig.tsbuildinfo",
        "*.d.ts",
        // GraphQL
        "packages/paradeigma-graphql/introspection.json",
        // Ace CDN
        "apps/paradeigma-web-app/public/code-editor/*",
        // Next JS
        ".vercel",
        "apps/**/.next/",
        "apps/**/out/"
    ],
    "plugins": [
        "https://plugins.dprint.dev/typescript-0.76.0.wasm",
        "https://plugins.dprint.dev/json-0.15.6.wasm",
        "https://plugins.dprint.dev/markdown-0.14.1.wasm"
    ]
}