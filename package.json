{
    "name": "paradeigma",
    "license": "MIT",
    "private": true,
    "packageManager": "yarn@3.2.4",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "apps:dev": "yarn workspaces foreach -ptvi --include '@paradeigma/*-app' run dev",
        "g:format": "cd $INIT_CWD && prettier --write .",
        "g:lint": "cd $INIT_CWD && eslint .",
        "g:typecheck": "cd $INIT_CWD && tsc --noEmit",
        "g:clean": "cd $INIT_CWD && rimraf ./tsconfig.tsbuildinfo ./.next"
    },
    "devDependencies": {
        "@next/eslint-plugin-next": "^12.3.1",
        "@typescript-eslint/eslint-plugin": "^5.40.1",
        "@typescript-eslint/parser": "^5.40.1",
        "eslint": "8.26.0",
        "eslint-config-prettier": "^8.5.0",
        "prettier": "2.7.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.8.4"
    },
    "resolutions": {
        "typescript": "4.8.3"
    }
}
