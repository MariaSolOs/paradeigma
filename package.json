{
    "name": "paradeigma",
    "license": "MIT",
    "private": true,
    "packageManager": "yarn@3.2.4",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "apps:dev": "yarn workspaces foreach -ptvi --include '@paradeigma/*-app' run dev",
        "g:lint": "cd $INIT_CWD && eslint .",
        "g:typecheck": "cd $INIT_CWD && tsc --noEmit",
        "g:clean": "cd $INIT_CWD && rimraf ./tsconfig.tsbuildinfo ./.next"
    },
    "devDependencies": {
        "@next/eslint-plugin-next": "^13.0.4",
        "@typescript-eslint/eslint-plugin": "^5.43.0",
        "@typescript-eslint/parser": "^5.43.0",
        "eslint": "8.28.0",
        "eslint-plugin-react": "^7.31.11",
        "rimraf": "^3.0.2",
        "typescript": "^4.9.3"
    },
    "resolutions": {
        "typescript": "~4.8.4"
    }
}
